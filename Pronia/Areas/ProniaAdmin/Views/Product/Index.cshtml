@model List<Product>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <a class="btn btn-success" asp-controller="product" asp-action="create">Create product</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                position
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    @foreach (ProductTag productTag in item.ProductTags)
                                    {
                                        <p>@productTag.Tag.Name</p>
                                    }
                                </td>

                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-controller="product" asp-route-id="@item.Id"><i class="mdi mdi-pencil-box"></i></a>
                                    <a class="btn btn-danger" asp-action="delete" asp-controller="product" asp-route-id="@item.Id"><i class="mdi mdi-delete"></i></a>
                                    <a class="btn btn-primary" asp-action="details" asp-controller="product" asp-route-id="@item.Id"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


