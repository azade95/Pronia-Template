@model Slide
<div class="container">
    <div class="row my-5">
        <div class="col-lg-3 justify-content-start">
            <img style="width:100%; height:100%;" src="~/assets/images/website-images/@Model.Image" />
        </div>
        <div class="col-lg-6 mx-5 my-5">
            <h4>Title:</h4>
            <h5 class="title">@Model.Title</h5>
            <h4>Subtitle:</h4>
            <h5> @Model.SubTitle</h5>
            <h4>Description</h4>
            <p>@Model.Description</p>
            <h4>Order: @Model.Order</h4>
             
        </div>
    </div>
</div>